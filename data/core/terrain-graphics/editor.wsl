-- Macros for terrains that appear differently (or only) in the editor

EDITOR_OVERLAY = (TERRAIN, IMAGE_NAME) ->
    if EDITOR
        Terrain_Graphics{
            tile: {
                x: 0, y: 0
                type: TERRAIN

                image: {
                    name: "#{IMAGE_NAME}.png~O(0.5)"
                    layer: 1000
                }
            }
        }


