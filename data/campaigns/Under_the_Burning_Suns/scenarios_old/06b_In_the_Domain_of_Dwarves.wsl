            aggression: 0.90
            caution: 0.10
        }
        goal: {
            name: "target"
            criteria: {
                id: "Kaleh"
            }
            value: 20
        }
    }

--Side=6 dwarf 2 (main base guards)
    side: {
        side: 6
        type: "Dwarvish Lord"
        id: "Dwarf Chieftain"
        name: _ "Dwarf Chieftain"
        canrecruit: true
        color: "purple"
        x: 6
        y: 16
