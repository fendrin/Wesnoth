--Side=2 dwarf 1 (guarding advance base)
    side: {
        side: 2
        color: "orange"
        no_leader: true
        gold: 0
        income: 0
        controller: "ai"
        shroud: false
        fog: false
--so that the lake bats won't go after dwarves
        team_name: "enemies"
        user_team_name: _ "Enemies"

        ai: {
            aggression: 0.9
            caution: 0.1

--defend advance outpost, don't retreat
            avoid: {
                x: "19-26", y: "30-32"
            }

            avoid: {
                x: "16-18", y: "33-35"
            }
        }
        <FLAG_VARIANT("knalgan")
