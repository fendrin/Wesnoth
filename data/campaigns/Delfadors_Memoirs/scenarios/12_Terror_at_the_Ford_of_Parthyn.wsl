-- Spotting other sides through the fog/shroud.

-- The sighted event currently only triggers if

    SIGHTED_EVENT: (SIDE_NUMBER, EVENT_NAME) -> {
        event: {
            name: "sighted"

            filter: {
                side: SIDE_NUMBER
            }
            filter_second: {
                side: 1
            }
            do: ->
                Fire_Event{
                    primary_unit: {
                        x: second_unit.x
                        y: second_unit.y
                    }
                    name: EVENT_NAME
                }
        }
        event: {
            name: "moveto"
            first_time_only: false

            filter: {
                not: {
                    side: 1
                }
            }
            do: ->
                If{
                    have_unit: {
                        side: SIDE_NUMBER
                        filter_vision: {
                            visible: true
                            side: 1
                        }
                    }
                    then: ->
                        Store_Unit{
                            variable: "speaker"
                            filter: {
                                side: 1
                                not: {
                                    id: "Delfador"
                                }
--[filter_vision]
--    visible=yes
--    side=2
--[/filter_vision]
                            }
                        }
                        Fire_Event{
                            primary_unit: {
                                x: speaker.x
                                y: speaker.y
                            }
                            name: EVENT_NAME
                        }
                        CLEAR_VARIABLE("speaker")
                    
                }
        }
    }

