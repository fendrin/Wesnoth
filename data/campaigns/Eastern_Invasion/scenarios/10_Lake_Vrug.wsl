--textdomain wesnoth-ei
Scenario{
    id: "10_Lake_Vrug"
    name: _ "Lake Vrug"
    map: "campaigns/Eastern_Invasion/maps/10_Lake_Vrug.map"
    turns: 30

    <DEFAULT_SCHEDULE_MORNING!

    next_scenario: "11_Captured"

    <SCENARIO_MUSIC("knolls.ogg")
    <EXTRA_SCENARIO_MUSIC("nunc_dimittis.ogg")
    <EXTRA_SCENARIO_MUSIC("weight_of_revenge.ogg")
    <EXTRA_SCENARIO_MUSIC("siege_of_laurelmor.ogg")
    <EXTRA_SCENARIO_MUSIC("silvan_sanctuary.ogg")
    <EXTRA_SCENARIO_MUSIC("wanderer.ogg")

    <EI_TRACK(JOURNEY_10_NEW!)

    victory_when_enemies_defeated: false

    side: {
        type: "Lieutenant"
        id: "Gweddry"
        name: _ "Gweddry"
        side: 1
        canrecruit: true
        controller: "human"
        team_name: "good"
        user_team_name: _ "Wesnothians"
        shroud: true
        gold: 200
        <FLAG_VARIANT("loyalist")
    }

    side: {
        type: "Troll Warrior"
        id: "Darg"
        name: _ "Darg"
        side: 2
        canrecruit: true
        <if HARD then {
            recruit: {"Troll Rocklobber", "Troll", "Troll Whelp"}
        } else {
            recruit: {"Troll", "Troll Whelp"}
        }
        team_name: "monster"
        user_team_name: _ "Monsters"
        <GOLD(200, 250, 300)
    }

    side: {
        type: "Gryphon"
        id: "Kraagak"
        name: _ "Kraagak"
        side: 3
        canrecruit: true
        <if EASY then {
            recruit: "Gryphon"
        } else {
            recruit: {"Gryphon", "Sky Drake"}
        }
        team_name: "monster"
        user_team_name: _ "Monsters"
        <GOLD(200, 250, 300)
        ai: {
            aggression: 0.9
            grouping: false
        }
    }

    event: {
        name: "prestart"

-- Manually place some icepacks (?)
        do: ->
            Objectives{
                side: 1
                objective: {
                    description: _ "Defeat the enemy leaders"
                    condition: "win"
                    show_if: {
                        variable: {
                            name: "enemies_defeated"
                            boolean_equals: false
                        }
                    }
                }
                objective: {
                    description: _ "Move Dacyn to the stronghold"
                    condition: "win"
                    show_if: {
                        variable: {
                            name: "Dacyn_researching"
                            boolean_equals: false
                        }
                    }
                }
                objective: {
                    description: _ "Death of Gweddry"
                    condition: "lose"
                }
                objective: {
                    description: _ "Death of Dacyn"
                    condition: "lose"
                }
                objective: {
                    description: _ "Death of Owaec"
                    condition: "lose"
                }

                <TURNS_RUN_OUT!

                gold_carryover: {
                    bonus: true
                    carryover_percentage: 40
                }
            }

            Set_Variable{
                name: "enemies_defeated"
                value: false
            }

            Set_Variable{
                name: "Dacyn_researching"
                value: false
            }
    }

    event: {
        name: "start"
        do: ->
            Recall{
                id: "Dacyn"
            }
            Recall{
                id: "Owaec"
            }
            Recall{
                id: "Grug"
            }
            Recall{
                id: "Terraent"
            }
            Message{
                speaker: "Dacyn"
                message: _ "The trail stops soon. We have almost reached Lake Vrug. There is a small island off the coast ahead that was once home to a great school of magic. I pray that the library is still intact."
            }
            Message{
                speaker: "Owaec"
                message: _ "But what happened to the people living on it?"
            }
            Message{
                speaker: "Dacyn"
                message: _ "Few enough remained before the trolls and gryphons took up residence in the mountains. But now the school is deserted, and has been for decades."
            }
            Message{
                speaker: "Gweddry"
                message: _ "Very well, we will take care of the trolls and gryphons. Search the library and may you find us an answer. Onward!"
            }
    }

--give the player a hint about mountainous terrain
    event: {
        name: "recall"
        filter: {
            type: {"Paladin", "Lancer", "Knight", "Grand Knight", "Horseman", "Cavalier", "Dragoon", "Cavalryman", "Heavy Infantryman", "Iron Mauler", "Shock Trooper"}
        }
        do: ->
            Fire_Event{
                name: "movement_warning"
            }
    }

    event: {
        name: "recruit"
        filter: {
            type: {"Horseman", "Cavalryman", "Heavy Infantryman"}
        }
        do: ->
            Fire_Event{
                name: "movement_warning"
            }
    }

    event: {
        name: "movement_warning"
        do: ->
            Message{
                speaker: "Dacyn"
                message: _ "The island ahead is mountainous; it would be wise to select troops that do well on such terrain."
            }
    }

    event: {
        name: "moveto"
        filter: {
            side: 1
            not: {
                id: "Dacyn"
            }
            filter_location: {
                x: 12, y: 4
                radius: 3
            }
        }
        filter_condition: {
            variable: {
                name: "Dacyn_researching"
                boolean_equals: false
            }
        }
        do: ->
            Message{
                speaker: "unit"
                message: _ "This must be the academy Dacyn mentioned."
            }
            Message{
                speaker: "Gweddry"
                message: _ "It still looks quite defensible. We should be able to hold there while Dacyn is working."
            }
            Message{
                speaker: "Dacyn"
                message: _ "Very well. Let us rally there after the trolls and gryphons are defeated."
            }
    }

    event: {
        name: "moveto"
        filter: {
            x: 12, y: 4
            side: 1
        }
        do: ->
            Sound{
                name: "gold.ogg"
            }
            Message{
                speaker: "narrator"
                image: "wesnoth-icon.png"
                message: _ "You find 100 gold in the fortress!"
            }
            Gold{
                side: 1
                amount: 100
            }
    }

    event: {
        name: "moveto"
        filter: {
            x: 12, y: 4
            id: "Dacyn"
        }
        do: ->
            Message{
                speaker: "Dacyn"
                message: _ "Excellent; Iâ€™ll start my research."
            }

            Store_Unit{
                filter: {
                    id: "Dacyn"
                }

                kill: true
                variable: "stored_Dacyn"
            }

            Set_Variable{
                name: "Dacyn_researching"
                value: true
            }

-- If we've already defeated all enemies, end the scenario now
            If{
                variable: {
                    name: "enemies_defeated"
                    boolean_equals: true
                }
                then: ->
                    Delay{
                        time: 3000
                    }

                    Message{
                        speaker: "narrator"
                        message: _ "Some time later..."
                        image: "wesnoth-icon.png"
                    }

                    Endlevel{
                        result: "victory"
                        bonus: true
                        <NEW_GOLD_CARRYOVER(40)
                    }
                
                else: ->
                    Show_Objectives{}
                
            }
    }

    event: {
        name: "enemies defeated"
        do: ->
            Message{
                speaker: "Gweddry"
                message: _ "Alright, now we should be safe while Dacyn is researching."
            }

            Set_Variable{
                name: "enemies_defeated"
                value: true
            }
    }

-- Check each turn if the victory conditions have been met
    event: {
        name: "turn end"
        first_time_only: false
        filter_condition: {
            variable: {
                name: "enemies_defeated"
                boolean_equals: true
            }
            variable: {
                name: "Dacyn_researching"
                boolean_equals: true
            }
        }
        do: ->
            Endlevel{
                result: "victory"
                bonus: true
                <NEW_GOLD_CARRYOVER(40)
            }
    }

    event: {
        name: "victory"
        do: ->
            Unstore_Unit{
                variable: "stored_Dacyn"
                find_vacant: true
            }

            CLEAR_VARIABLE("stored_Dacyn")
            CLEAR_VARIABLE("enemies_defeated")
            CLEAR_VARIABLE("Dacyn_researching")

            Store_Unit{
                filter: {
                    id: "Gweddry"
                }
                variable: "temp"
            }
            Message{
                speaker: "Dacyn"
                message: _ "I have found an answer! We must return to Wesnoth immediately! ..."
            }
            Unit{
                type: "Troll Warrior"
                side: 3
                x: temp.x
                y: temp.y
            }
            Unit{
                type: "Troll Warrior"
                id: "Groog"
                name: _ "Groog"
                side: 3
                x: temp.x
                y: temp.y
            }
            Unit{
                type: "Troll Warrior"
                side: 3
                x: temp.x
                y: temp.y
            }
            Unit{
                type: "Troll Warrior"
                side: 3
                x: temp.x
                y: temp.y
            }
            Unit{
                type: "Troll Warrior"
                side: 3
                x: temp.x
                y: temp.y
            }
            Unit{
                type: "Troll Warrior"
                side: 3
                x: temp.x
                y: temp.y
            }
            Message{
                speaker: "Groog"
-- wmllint: local spelling wid
                message: _ "Be not going too fast. You gonna come wid us."
            }
            Delay{
                time: 100
            }

            CLEAR_VARIABLE("temp")
    }

    <FOREIGN_DEFEAT!

    <HERODEATH_GWEDDRY!
    <HERODEATH_DACYN!
    <HERODEATH_OWAEC!
    <HERODEATH_GRUG!
}
