--textdomain wesnoth-l

SET_VILLAGE = (X, Y, SIDE) -> {
    capture_village: {
        x: X
        y: Y
        side: SIDE
    }
}

LIBERTY_DEATHS = () -> {
    event: {
        name: "last breath"
        filter: {
            id: "Baldras"
        }
        do: ->
            Message{
                speaker: "Baldras"
                message: _ "Tell my wife... that I loved her!"
            }
            Endlevel{
                result: "defeat"
            }
    }

    event: {
        name: "last breath"
        filter: {
            id: "Harper"
        }
        do: ->
            Message{
                speaker: "Harper"
--wmllint: local spelling Unngh
                message: _ "Unngh... Now our people may never be free..."
            }
            Endlevel{
                result: "defeat"
            }
    }

    event: {
        name: "last breath"
        filter: {
            id: "Relana"
        }
        do: ->
            Message{
                speaker: "Relana"
                message: _ "I am finished... will we ever be free?"
            }
            Endlevel{
                result: "defeat"
            }
    }

    event: {
        name: "last breath"
        filter: {
            id: "Lord Maddock"
        }
        do: ->
            Message{
                speaker: "Lord Maddock"
                message: _ "How can this be? We have lost."
            }
            Endlevel{
                result: "defeat"
            }
    }
}

