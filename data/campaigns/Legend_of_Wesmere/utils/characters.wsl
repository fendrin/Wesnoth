--textdomain wesnoth-low
PLAYER_TEAM = () -> {
    team_name: "player"
    user_team_name: _ "Player"
}

PLAYABLE = () -> {
    unrenamable: true
    controller: "human"
    canrecruit: true
    <PLAYER_TEAM!
    village_gold: 1
    persistent: true
    allow_player: true
    <if MULTIPLAYER then {
        team_lock: true
        gold_lock: true
        income_lock: true
        faction: "Custom"
        share_view: true
    }
}

