        name: "prestart"
        do: ->
            Store_Locations{
                variable: "ToD_change_to_litcave"
                x: "28-31"
                or: {
                    x: "25-27", y: "0-1"
                }
                or: {
                    x: 24, y: 0
                }
                or: {
                    x: 27, y: 2
                }
                or: {
                    x: "26-27", y: 26
                }
                or: {
                    x: "32-36", y: "9-19"
                    terrain: {"R*", "Gg^Emf", "Rp^Uf", "Rp^Dr", "Rd^Uf"}
                }
                or: {
                    x: "0-3"
                    terrain: {"Rr", "Xos"}
                }
                or: {
                    x: "22-37"
                    terrain: "Xos"
                }
            }
            Time_Area{
                find_in: "ToD_change_to_litcave"
                time: {
                    id: "underground_illum"
                    name: _ "Underground"
                    image: "misc/time-schedules/schedule-underground-illum.png"
